# Local state
.DS_Store

# Theme watcher artifacts
.theme
Library/Logs/theme-watcher.log

# User-host-only LaunchAgents should live under repo path launchd/, not in $HOME
Library/LaunchAgents/local.theme-watcher.plist

# Ignore everything by default
*

# Keep this file
!/.gitignore
!/Brewfile
!/install.sh
!/README.md
!/.github
!/.github/**
!/scripts
!/scripts/**

# Include launchd plists stored in the repo
!/launchd
!/launchd/**

# Root-level configs to keep
!/.yabairc
!/.skhdrc
!/.zshrc
!/.gitconfig
!/.ghci

# Allow .config directory, but ignore its contents by default
!/.config/
/.config/**

# Include our managed configs
!/.config/sketchybar
!/.config/sketchybar/**
!/.config/kitty
!/.config/kitty/kitty.conf
!/.config/kitty/theme-light.conf
!/.config/kitty/theme-dark.conf
!/.config/kitty/theme.conf
!/.config/starship.toml
!/.config/nvim
!/.config/nvim/**
/.config/spacebar/**
!/.config/htop/htoprc
!/.config/oni2/configuration.json
!/.config/oni2/keybindings.json
!/.config/jgit/config
!/.config/com.googlecode.iterm2.plist

# Include a single Karabiner file (ignore the rest)
!/.config/karabiner/
/.config/karabiner/**
!/.config/karabiner/karabiner.json
!/.config/karabiner/assets/
!/.config/karabiner/assets/**

# Explicitly ignore sensitive/noisy config data
/.config/raycast/**
/.config/joplin-desktop/**
/.config/github-copilot/**
/.config/gh-copilot/**
/.config/gh/**
/.config/oni2/**
/.config/jgit/**
/.config/iterm2/**
/.config/pip/**
/.config/htop/**

# Re-include selected configs after broad ignores
!/.config/oni2/configuration.json
!/.config/oni2/keybindings.json
!/.config/jgit/config
!/.config/com.googlecode.iterm2.plist
